<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customtoast"
    android:background="#fff">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Fitness Monster"
        android:textColor="#6600ff"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        app:srcCompat="@drawable/launcher" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="128dp"
            android:layout_height="143dp"
            app:srcCompat="@drawable/ashutosh" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_margin="20dp"
            android:layout_weight="0.38"
            android:paddingTop="30dp"
            android:text="Ashutosh Kumar Rai"
            android:textSize="20dp"
            android:textColor="#000000"/>


    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="127dp"
        android:layout_height="87dp"
        app:srcCompat="@drawable/piyush" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="Piyush Sharma"
        android:textSize="20dp"
        android:textColor="#000000"/>
</LinearLayout>
</LinearLayout>
